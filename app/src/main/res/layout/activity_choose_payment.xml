<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".ChoosePayment">

    <TextView
        android:id="@+id/ChoosePayment"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="@string/choose_payment_method"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Choose Payment Method" />

    <ImageButton
        android:id="@+id/GPayBtn"
        android:layout_width="169dp"
        android:layout_height="117dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="232dp"
        android:background="#2196F3"
        android:backgroundTint="#2196F3"
        android:contentDescription="@string/goolge_pay_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gpay"
        tools:srcCompat="@drawable/gpay" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="360dp"
        android:text="@string/google_pay"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="560dp"
        android:text="@string/debit_credit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CreditBtn"
        android:layout_width="169dp"
        android:layout_height="115dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="432dp"
        android:background="#2196F3"
        android:backgroundTint="#2196F3"
        android:contentDescription="@string/credit_card_image"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/credit"
        app:strokeColor="@color/black"
        app:strokeWidth="100dp"
        tools:srcCompat="@drawable/credit" />

</androidx.constraintlayout.widget.ConstraintLayout>