<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardEmulator">

    <Button
        android:id="@+id/button_back_button_cardemulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="61dp"
        android:backgroundTint="#2196F3"
        android:text="@string/back"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eagleCard" />

    <ImageView
        android:id="@+id/eagleCard"
        android:layout_width="204dp"
        android:layout_height="318dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="303dp"
        android:contentDescription="@string/emulatorcard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eaglecard" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="60dp"
        android:text="ID: 1234567"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_back_button_cardemulator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eagleCard"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="33dp"
        android:text="Name: John Wick"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eagleCard"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>